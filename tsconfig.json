{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "jsx": "react",
    // "strict": true,
    // "noImplicitAny": false,
    "allowJs": true,
    "checkJs": false,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@deck.gl-community/arrow-layers": ["modules/arrow-layers/src"],
      "@deck.gl-community/bing-maps": ["modules/bing-maps/src"],
      "@deck.gl-community/editable-layers": ["modules/editable-layers/src"],
      "@deck.gl-community/layers": ["modules/layers/src"],
      "@deck.gl-community/react": ["modules/react/src"],
      "@deck.gl-community/template": ["modules/template/src"],
      "@deck.gl-community/test-utils": ["modules/test-utils/src"],
      "deck-graph-layers": ["modules/graph-layers/src"],
      "react-deck-graph-layers": ["modules/react-graph-layers/src"]
    },
    "typeRoots": ["./node_modules/@types"],
    // TODO
    "strict": false,
    "noImplicitAny": false
  },
  "include": [
    "modules",
    "test",
    "examples",
    "scripts"
  ],
  "exclude": [
    "**/node_modules",
    "**/dist"
  ]
}
